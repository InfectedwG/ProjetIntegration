<div id="inscription-successful" style="display: none;">
    Inscription Completee avec succes!. Veuillez vous connecter.
</div>
<div class="container ">
    <div class="row justify-content-around " style="padding-top: 2rem;">
        <div class="col-5">
            <form id="login-form">
                <h2>LOGIN</h2>

                <label for="email">Email Address <span class="required">*</span></label>

                <input type="email" id="email-login" name="email" required>

                <div id="email-error" class="error-message"></div>

                <label for="password">Password <span class="required">*</span></label>

                <input type="password" id="password-login" name="password" required>

                <div id="password-error" class="error-message"></div>

                <label for="captcha"> Captcha <span class="required">*</span></label>

                <div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>

                <div id="remember-me-error" class="error-message"></div>

                <div class="remember-me">
                    <input type="submit" id="login-submit" value="LOGIN" class="submit-btn">
                    <input type="checkbox" id="remember" name="remember">
                    <label for="remember">
                        Remember me
                        <span class="required">
                            *
                        </span>
                    </label>
                </div>

                <p>
                    <a href="">Lost your password ?</a>
                </p>
            </form>
        </div>

        <div class="col-5">
            <form class="signup-form" id="register-form">

                <h2> REGISTER </h2>

                <label for="first-name"> First Name <span class="required">*</span></label>

                <input type="text" id="firstname-register" name="FirstName" required>

                <label for="last-name"> Last Name <span class="required">*</span></label>

                <input type="text" id="lastname-register" name="LastName" required>

                <label for="email"> Email address <span class="required">*</span></label>

                <input type="email" id="email-register" name="email" required>

                <label for="password-register">Password <span class="required">*</span> </label>

                <input type="password" id="password-register" name="password" required>

                <label for="password-confirmation-register">Confirm Password <span class="required">*</span> </label>

                <input type="password" id="password-confirmation-register" name="password-confirmation" required>

                <div class="Privacy Policy">
                    <p>
                        Your personal dada will be used to support your
                        experience throughout this web site, to manage access to your account,
                        and for auther purpose described in our
                        <a href="/privacy-policy"> Privacy Policy</a>
                    </p>
                </div>

                <input type="submit"  value="REGISTER" class="submit-btn">

            </form>
        </div>
    </div>
</div>